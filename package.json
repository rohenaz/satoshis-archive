{
  "name": "satoshis-archive",
  "version": "0.1.0",
  "description": "Browse Anna's Archive and store documents on the BSV blockchain",
  "author": "Satoshi's Archive Contributors",
  "license": "MIT",
  "main": "electron/dist/main.js",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "dev:electron": "cross-env NODE_ENV=development electron .",
    "build": "next build",
    "build:electron": "tsc -p electron/tsconfig.json && next build",
    "package": "npm run build:electron && electron-builder",
    "package:mac": "npm run build:electron && electron-builder --mac",
    "package:win": "npm run build:electron && electron-builder --win",
    "package:linux": "npm run build:electron && electron-builder --linux",
    "start": "next start",
    "start:electron": "electron .",
    "lint": "next lint"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "autoprefixer": "^10.4.23",
    "cross-env": "^10.1.0",
    "electron": "^39.2.7",
    "electron-builder": "^26.0.12",
    "eslint": "^9.39.2",
    "eslint-config-next": "^16.1.1",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.18",
    "wait-on": "^9.0.3"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@bsv/sdk": "^1.9.29",
    "next": "^16.1.1",
    "react": "^19.2.3",
    "react-dom": "^19.2.3"
  },
  "build": {
    "appId": "com.satoshisarchive.app",
    "productName": "Satoshi's Archive",
    "files": [
      ".next/standalone/**/*",
      ".next/static/**/*",
      "public/**/*",
      "electron/dist/**/*"
    ],
    "directories": {
      "buildResources": "public/icons",
      "output": "dist"
    },
    "mac": {
      "target": ["dmg", "zip"],
      "category": "public.app-category.utilities",
      "icon": "public/icons/icon.icns"
    },
    "win": {
      "target": ["nsis", "portable"],
      "icon": "public/icons/icon.ico"
    },
    "linux": {
      "target": ["AppImage", "deb"],
      "category": "Utility",
      "icon": "public/icons/icon.png"
    }
  }
}
